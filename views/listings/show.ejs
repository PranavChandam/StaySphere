<% layout('/layouts/boilerPlate') %>
<body>

    <div class="row mt-3">
    <div class="col-8 offset-3">
    <h5 class="card-title"><%=listing.title%></h5>
    </div>

    <div class="card col-6 offset-3" >
    <img src="<%=listing.image%>"  class="card-img-top show-img" alt="listing_image">
    <div class="card-body">
    
    <p class="card-text">
        <%= listing.description %><br>
        &#8377 <%= listing.price.toLocaleString("en-IN") %> <br>
        <%= listing.location %> <br>
        <%= listing.country %>
    </p>
    </div>
    

    

    <div class="btns">
      <a href="/listing/<%= listing.id %>/edit" class="btn btn-dark mt-3 ">Edit</a>

    
    <form method="post" action="/listing/<%= listing.id %>?_method=DELETe">
        <button class="btn btn-danger offset-6 mt-3">Delete</button>
    </form>
    
    </div>
    </div>
    <hr>
       <div class="col-8 offset-3">
        <h4>Leave A Review</h4>
        <form action="/listing/<%=listing.id%>/reviews" method="post">
            <div class="mb-3 mt-3">
             <label for="rating" class="form-label">Rating</label>
             <input id="rating" type="range" min="1" max="5" name="review[rating]">
            </div>

            <div class="mb-3 mt-3">
             <label for="comment" class="form-label">Comment</label>
             <textarea id="comment" name="review[comment]" cols="30" rows="5" class="form-control"></textarea>
            </div>
            <button class="btn-outline-dark mt-3">Submit</button><br><br>
        </form>
       </div>
    </div>
    
</body>
